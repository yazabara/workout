.row.field
    div.input-group
        span.input-group-addon
            i.fa.fa-envelope-o.fa-fw
        input.form-control(type="text",placeholder="e-mail", name="email", ng-model="userEmail")
.row.field
    div.input-group
        span.input-group-addon
            i.fa.fa-unlock-alt.fa-fw
        input.form-control(type="password",placeholder="Password", name="password", ng-model="userPassword")
.row.field
    button.btn.btn-default.btn-block(ng-click="authWithPassword()") Login
.row.field
    ul.social-links
        li
            a(href="#",ng-click="googleAuth()")
                i.fa.fa-google.fa-fw
        li
            a(href="#", ng-click="githubAuth()")
                i.fa.fa-github.fa-fw
        li
            a(href="#",ng-click="facebookAuth()")
                i.fa.fa-facebook.fa-fw
        li
            a(href="#")
                i.fa.fa-vk.fa-fw
        li
            a(href="#")
                i.fa.fa-twitter-square.fa-fw
