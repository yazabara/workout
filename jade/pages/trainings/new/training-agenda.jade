.row(ng-controller="CalendarCtrl")
    .col-md-4.training-agenda
        h2.training-agenda-header.new-font Training agenda
        .list-group
            .list-group-item
                button(type="button",class="btn btn-success") Add event
            .list-group-item(ng-repeat='event in events')
                .row
                    .col-md-9
                        input(type="text",class="form-control",placeholder="event title",ng-model='event.title')
                    .col-md-3
                        i.fa.fa-pencil.fa-fw.remove-event
                        i.fa.fa-times.fa-fw.remove-event(ng-click="remove($index)")
    .col-md-8
        div(ui-calendar="uiConfig.calendar",class="calendar",ng-model="eventSources")
